{
	"builders": [
		{
			"type": "vmware-iso",
			"name": "vmware",
			"boot_command": [
				"<esc><wait>",
				"install",
				" auto",
				" url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/{{ user `preseed` }}",
				" debian-installer=en_US",
				" locale=en_US",
				" keymap=us",
				" netcfg/get_hostname=vagrant",
				" netcfg/get_domain=vm ",
				"<enter>"
			],
			"disk_size": "{{ user `disk_size` }}",
			"guest_os_type": "{{ user `vmware_guest_os_type` }}",
			"headless": "{{ user `headless` }}",
			"http_directory": "http",
			"iso_checksum": "{{user `iso_checksum`}}",
			"iso_checksum_type": "{{user `iso_checksum_type`}}",
			"iso_urls": [
				"{{ user `iso_path` }}/{{ user `iso_name` }}",
				"{{ user `iso_path` }}/{{ user `vm_name` }}.iso",
				"{{ user `iso_url` }}"
			],
			"network": "nat",
			"output_directory": "output-{{ user `vm_name` }}-vmware-iso",
			"shutdown_command": "sudo shutdown -h now",
			"ssh_password": "{{ user `ssh_password` }}",
			"ssh_username": "{{ user `ssh_username` }}",
			"ssh_wait_timeout": "10000s",
			"tools_upload_flavor": "linux",
			"tools_upload_path": "vmware-tools-lin.iso",
			"vm_name": "{{ user `vm_name` }}",
			"cpus": "{{ user `cpus` }}",
			"memory": "{{ user `memory` }}"
		},
		{
			"type": "virtualbox-iso",
			"name": "virtualbox",
			"boot_command": [
				"<esc><wait>",
				"install",
				" auto",
				" url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/{{ user `preseed` }}",
				" debian-installer=en_US",
				" locale=en_US",
				" keymap=us",
				" netcfg/get_hostname=vagrant",
				" netcfg/get_domain=vm ",
				"<enter>"
			],
			"disk_size": "{{ user `disk_size` }}",
			"guest_additions_mode": "upload",
			"guest_additions_path": "VBoxGuestAdditions.iso",
			"guest_os_type": "{{ user `virtualbox_guest_os_type` }}",
			"headless": "{{ user `headless` }}",
			"http_directory": "http",
			"iso_checksum": "{{ user `iso_checksum` }}",
			"iso_checksum_type": "{{ user `iso_checksum_type` }}",
			"iso_urls": [
				"{{ user `iso_path` }}/{{ user `iso_name` }}",
				"{{ user `iso_path` }}/{{ user `vm_name` }}.iso",
				"{{ user `iso_url` }}"
			],
			"output_directory": "output-{{ user `vm_name` }}-virtualbox-iso",
			"post_shutdown_delay": "1m",
			"shutdown_command": "sudo shutdown -h now",
			"ssh_password": "{{ user `ssh_password` }}",
			"ssh_username": "{{ user `ssh_username` }}",
			"ssh_wait_timeout": "10000s",
			"cpus": "{{ user `cpus` }}",
			"memory": "{{ user `memory` }}",
			"virtualbox_version_file": ".vbox_version",
			"vm_name": "{{ user `vm_name` }}"
		},
		{
			"type": "parallels-iso",
			"name": "parallels",
			"boot_command": [
				"<esc><wait>",
				"install",
				" auto",
				" vga=normal",
				" fb=false",
				" url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/{{ user `preseed` }}",
				" debian-installer=en_US",
				" locale=en_US",
				" keymap=us",
				" netcfg/get_hostname=vagrant",
				" netcfg/get_domain=vm ",
				"<enter>"
			],
			"disk_size": "{{ user `disk_size` }}",
			"guest_os_type": "{{ user `parallels_guest_os_type` }}",
			"http_directory": "http",
			"iso_checksum": "{{ user `iso_checksum` }}",
			"iso_checksum_type": "{{ user `iso_checksum_type` }}",
			"iso_urls": [
				"{{ user `iso_path` }}/{{ user `iso_name` }}",
				"{{ user `iso_path` }}/{{ user `vm_name` }}.iso",
				"{{ user `iso_url` }}"
			],
			"output_directory": "output-{{ user `vm_name` }}-parallels-iso",
			"parallels_tools_flavor": "lin",
			"parallels_tools_guest_path": "prl-tools-lin.iso",
			"parallels_tools_mode": "upload",
			"cpus": "{{ user `cpus` }}",
			"memory": "{{ user `memory` }}",
			"prlctl_version_file": ".prlctl_version",
			"shutdown_command": "sudo shutdown -h now",
			"ssh_password": "{{ user `ssh_password` }}",
			"ssh_username": "{{ user `ssh_username` }}",
			"ssh_wait_timeout": "10000s",
			"vm_name": "{{ user `vm_name` }}"
		}
	],
	"post-processors": [
		[
			{
				"type": "vagrant",
				"keep_input_artifact": false,
				"output": "{{ user `box_path` }}/{{ user `vm_name` }}/{{ user `version` }}/{{.Provider}}.box",
				"vagrantfile_template": "{{ user `vagrantfile_template` }}"
			}
		]
	],
	"provisioners": [
		{
			"type": "shell-local",
			"inline": [
				"if [ ! -d '{{user `configdir` }}' ]; then printf -- 'Invalid config dir passed: \"%s\"\n' '{{user `configdir` }}'; exit 2; fi",
				"mkdir -p configdir",
				"rm -f configdir/configdir.tar",
				"tar -c -f configdir/configdir.tar --exclude data -C {{user `configdir` }} '.'"
			]
		},
		{
			"type": "shell-local",
			"inline": [
				"mkdir -p tools-manual"
			]
		},
		{
			"type": "file",
			"source": "tools-manual",
			"destination": "/home/vagrant"
		},
		{
			"type": "shell",
			"environment_vars": [
				"APT_BACKPORTS={{user `apt_backports`}}",
				"APT_UPDATES={{user `apt_updates`}}",
				"APT_MIRROR={{user `apt_mirror`}}",
				"UPDATE={{user `update`}}",
				"http_proxy={{user `http_proxy`}}",
				"https_proxy={{user `https_proxy`}}",
				"ftp_proxy={{user `ftp_proxy`}}",
				"rsync_proxy={{user `rsync_proxy`}}",
				"no_proxy={{user `no_proxy`}}"
			],
			"execute_command": "chmod +x {{ .Path }}; {{ .Vars }} sudo -E {{ .Path }}",
			"scripts": [
				"script/set-apt-sources.sh",
				"script/systemd.sh",
				"script/grub.sh",
				"script/update.sh"
			],
			"expect_disconnect": true,
			"skip_clean": true
		},
		{
			"type": "shell",
			"environment_vars": [
				"MOTD={{user `motd`}}",
				"GUEST_TOOLS={{user `guest_tools`}}",
				"GUEST_TOOLS_DISTRO={{user `guest_tools_distro`}}",
				"INSTALL_VAGRANT_KEY={{user `install_vagrant_key`}}",
				"SSH_USERNAME={{user `ssh_username`}}",
				"SSH_PASSWORD={{user `ssh_password`}}",
				"VM_NAME={{user `vm_name`}}",
				"BOX_VERSION={{user `version`}}",
				"BOX_ORG={{user `vagrantcloud_org`}}",
				"http_proxy={{user `http_proxy`}}",
				"https_proxy={{user `https_proxy`}}",
				"ftp_proxy={{user `ftp_proxy`}}",
				"rsync_proxy={{user `rsync_proxy`}}",
				"no_proxy={{user `no_proxy`}}"
			],
			"execute_command": "chmod +x {{ .Path }}; {{ .Vars }} sudo -E {{ .Path }}",
			"scripts": [
				"script/motd.sh",
				"script/vagrant.sh",
				"script/vmware.sh",
				"script/virtualbox.sh",
				"script/parallels.sh"
			],
			"pause_before": "10s"
		},
		{
			"type": "file",
			"source": "/tmp/guest-additions-version.txt",
			"destination": "{{ user `box_path` }}/{{user `vm_name`}}/{{user `version`}}/{{build_name}}.version",
			"direction": "download"
		},
		{
			"type": "shell",
			"execute_command": "chmod +x {{ .Path }}; {{ .Vars }} sudo -E {{ .Path }}",
			"scripts": [
				"script/minimize.sh"
			]
		},
		{
			"type": "file",
			"source": "configdir",
			"destination": "/tmp/",
			"pause_before": "20s"
		},
		{
			"type": "shell",
			"inline": [
				"sudo -H mkdir -p /tmp/bundle-infra",
				"cd /tmp/bundle-infra",
				"sudo -H tar -x -f /tmp/configdir/configdir.tar -C .",
				"/tmp/bundle-infra/setup.sh --role development --env local --hostname local-dev.bundlesites.com"
			]
		},
		{
			"type": "shell",
			"environment_vars": [
				"APT_BACKPORTS={{user `apt_backports`}}",
				"APT_UPDATES={{user `apt_updates`}}",
				"APT_MIRROR={{user `apt_mirror`}}",
				"MOTD={{user `motd`}}",
				"UPDATE={{user `update`}}",
				"GUEST_TOOLS={{user `guest_tools`}}",
				"INSTALL_VAGRANT_KEY={{user `install_vagrant_key`}}",
				"SSH_USERNAME={{user `ssh_username`}}",
				"SSH_PASSWORD={{user `ssh_password`}}",
				"VM_NAME={{user `vm_name`}}",
				"BOX_VERSION={{user `version`}}",
				"BOX_ORG={{user `vagrantcloud_org`}}",
				"http_proxy={{user `http_proxy`}}",
				"https_proxy={{user `https_proxy`}}",
				"ftp_proxy={{user `ftp_proxy`}}",
				"rsync_proxy={{user `rsync_proxy`}}",
				"no_proxy={{user `no_proxy`}}"
			],
			"execute_command": "chmod +x {{ .Path }}; {{ .Vars }} sudo -E {{ .Path }}",
			"scripts": [
				"script/cleanup.sh"
			]
		}
	],
	"variables": {
		"cpus": "1",
		"disk_size": "65536",
		"apt_mirror": "https://deb.debian.org/debian",
		"apt_backports": "true",
		"apt_updates": "true",
		"box_path": "",
		"configdir": "./configdir",
		"ftp_proxy": "{{env `ftp_proxy`}}",
		"guest_tools": "true",
		"guest_tools_distro": "true",
		"headless": "true",
		"http_proxy": "{{env `http_proxy`}}",
		"https_proxy": "{{env `https_proxy`}}",
		"install_vagrant_key": "true",
		"iso_checksum": "",
		"iso_checksum_type": "sha1",
		"iso_path": "",
		"iso_name": "",
		"iso_url": "",
		"memory": "1024",
		"motd": "true",
		"no_proxy": "{{env `no_proxy`}}",
		"no_release": "true",
		"parallels_guest_os_type": "debian",
		"preseed": "preseed.cfg",
		"rsync_proxy": "{{env `rsync_proxy`}}",
		"ssh_password": "vagrant",
		"ssh_username": "vagrant",
		"update": "true",
		"vagrantcloud_token": "{{env `VAGRANTCLOUD_TOKEN`}}",
		"vagrantcloud_org": "mooneleaf",
		"vagrantfile_template": "tpl/vagrantfile-koalephant.rb",
		"version": "0.1.0",
		"version_description": "",
		"vm_name": "debian"
	}
}
